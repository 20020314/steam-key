            \75})(window,document,'script','https://www.google-analytics.com/analytics.js','ga');
            ga('create', 'UA-60000402-7', 'auto');
            ga('send', 'pageview');
    </script>

    <script src="/static/script/script.js"></script>

</body>

</html>
